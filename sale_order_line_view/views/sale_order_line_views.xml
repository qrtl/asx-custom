<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_id']" position="after">
                <field name="date_order"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="product_id"/>
            </xpath>
            <xpath expr="//field[@name='salesman_id']" position="before">
                <field name="partner_shipping_id"/>
            </xpath>
            <xpath expr="//field[@name='price_subtotal']" position="after">
                <field name="state"/>
            </xpath>
        </field>
    </record>

    <record id="view_sales_order_line_filter" model="ir.ui.view">
        <field name="name">sale.order.line.select</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="partner_shipping_id"/>
            </xpath>
            <xpath expr="//filter[@name='salesperson']" position="after">
                <filter string="Delivery Address" name="partner_shipping_id" domain="[]" context="{'group_by':'partner_shipping_id'}"/>
                <filter string="Status" name="state" domain="[]" context="{'group_by':'state'}"/>
            </xpath>
        </field>
    </record>

    <record id="action_sale_order_line" model="ir.actions.act_window">
        <field name="name">Sales Order Lines</field>
        <field name="res_model">sale.order.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem action="action_sale_order_line" id="sale_order_line_menu"
              parent="sale.sale_order_menu" sequence="2"/>

</odoo>
