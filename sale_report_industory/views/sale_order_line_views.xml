<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_partner_id']" position="after">
                <field name="categ_id" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_sale_order_line_pivot">
        <field name="name">sale.order.line.pivot</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <pivot string="Sale Order Line">
                <field name="industry_id" type="row"/>
                <field name="price_subtotal" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="action_sale_order_line" model="ir.actions.act_window">
        <field name="name">Sales Order Lines Pivot</field>
        <field name="res_model">sale.order.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
    </record>
    <menuitem
        action="action_sale_order_line"
        id="sale_order_line_menu"
        parent="sale.sale_order_menu"
        sequence="3"
        groups="sales_team.group_sale_salesman"
    />
</odoo>
